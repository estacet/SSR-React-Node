{
  "include": ["src"],
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true
  },
  "exclude": [
    "src/server"
  ]
}