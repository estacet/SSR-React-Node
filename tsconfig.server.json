{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/server",
    "module": "commonjs",
    "sourceMap": true,
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "lib": ["es6", "dom"],
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "moduleResolution": "Node"
  },
  "files": [
    "src/server/server.tsx"
  ],
  "include": ["src/server"],
  "exclude": [
    "/node_modules"
  ]
}